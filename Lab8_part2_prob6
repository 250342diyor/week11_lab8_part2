#include <iostream>
#include <cstring>
#include <cctype>

using namespace std;

void count(const char s[], int counts[]) {
    for (int i = 0; i < 26; i++) {
        counts[i] = 0;
    }

    for (int i = 0; s[i] != '\0'; i++) {
        char currentChar = s[i];

        char lowerChar = tolower(currentChar);

        if (lowerChar >= 'a' && lowerChar <= 'z') {
            int index = lowerChar - 'a';
            counts[index]++;
        }
    }
}

int main() {
    const int MAX_LEN = 1000;
    char inputString[MAX_LEN];
    int letterCounts[26];

    cout << "Enter a string: ";
    cin.getline(inputString, MAX_LEN);

    count(inputString, letterCounts);

    cout << "\nLetter Counts:\n";

    for (int i = 0; i < 26; i++) {
        if (letterCounts[i] > 0) {
            char letter = 'a' + i;
            cout << letter << ": " << letterCounts[i] << endl;
        }
    }

    return 0;
}
